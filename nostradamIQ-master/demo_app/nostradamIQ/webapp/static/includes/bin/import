#!/usr/bin/env php
<?php
    
    // Import a .txt Postal-Code file in the MySQL DB
    // possible source: http://download.geonames.org/export/zip/

    require("../includes/functions.php");
    // verify arguments
    if ($argc != 2)
    {
        print("Usage: import <path-to-file>\n");
        return -1;
    }
    
    // get import path+filename
    $filename = $argv[1];
    
    // verify file exists
    if (!file_exists($filename))
    {
        print("Error: file " . $filename . " doesn't exist\n");
        return -1;  
    }
    
    // verify file is readable
    if (!is_readable($filename))
    {
        print("Error: file " . $filename . " is not readable\n");
        return -1;  
    }
    
    // open file
    $file = fopen($filename, "r");
    if (!$file)
    {
        print("Error: unable to open file " . $filename . "\n");
        return -1;  
    }
    
    // define constants for field array indexes
    const COUNTRY_CODE  = 0;
    const POSTAL_CODE   = 1;
    const PLACE_NAME    = 2;
    const ADMIN_NAME1   = 3;
    const ADMIN_CODE1   = 4;
    const ADMIN_NAME2   = 5;
    const ADMIN_CODE2   = 6;
    const ADMIN_NAME3   = 7;
    const ADMIN_CODE3   = 8;
    const LATITUDE      = 9;
    const LONGITUDE     = 10;
    const ACCURACY      = 11;
    // read file and import into db
    $currLine = 1;
    $errCount = 0;
    while (($line = fgetcsv($file, 0, "\t")) !== FALSE) {
        // insert row into places table
        $result = query(
            "INSERT 
                INTO places 
                (country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, admin_code3, latitude, longitude, accuracy) 
                VALUES
                (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", 
                $line[COUNTRY_CODE], 
                $line[POSTAL_CODE], 
                $line[PLACE_NAME], 
                $line[ADMIN_NAME1], 
                $line[ADMIN_CODE1], 
                $line[ADMIN_NAME2], 
                $line[ADMIN_CODE2], 
                $line[ADMIN_NAME3], 
                $line[ADMIN_CODE3], 
                $line[LATITUDE], 
                $line[LONGITUDE], 
                $line[ACCURACY]
        );
        
        // verify
        if ($result === false)
        {
            print("Error inserting line " . $currLine . "\n");
            $errCount++;
        }
        
        $currLine++;
    }
    
    // display results
    print("File Imported:\nLines read: " . $currLine . "\nErrors: " . $errCount . "\n");
    // close file
    fclose($file);
 
?>